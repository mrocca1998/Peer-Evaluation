<p id="notice"><%= notice %></p>

<h1 class="title">Students</h1>

<table class="infoTable1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th colspan="3"> </th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %> <%= student.lname %></td>
        <td><%= student.email %></td>
        <td><%= student.isAdmin %></td>
        <td><button class="infoButton1"><%= link_to 'Details', student %></button></td>
        <td><button class="infoButton1"><%= link_to 'Edit', edit_student_path(student) %></button></td>
        <td><button class="infoButton1"><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="addButton1"><%= link_to 'Add Student', new_student_path %></button>
