<p id="notice"><%= notice %></p>

<h2><%= @group.name %></h2>

<% if @students.length > 0 %>
	<h3>Group Member(s)</h3>	
	<% @students.each do |student| %>
	  <div class = "checks">
	    <li><%= student.fname %> <%= student.lname %> <%= student.email %> <br></li>
	  </div>
	<% end %>
	<br>
<% else %>
  <h3>This Group Currently has No Members</h3>
<% end %>

<% if @projects.length > 0 %>
	<h3>Project(s) Assigned</h3>
	<% @projects.each do |project| %>
	  <div class = "checks">
	    <li><%= project.title %> <br></li>
	  </div>
	<% end %>
	<br>
<% else %>
  	<h3>This Group is not Currently Assigned to Any Projects</h3>
<% end %>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
