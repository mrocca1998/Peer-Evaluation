<p id="notice"><%= notice %></p>

<h1 class="title">Groups</h1>

<table class="infoTable2">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"> </th>
    </tr>
  </thead>

  <tbody>
    <% @groups.sort_by(&:name).each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><button class="infoButton2"><%= link_to 'Details', group %></button></td>
        <td><button class="infoButton2"><%= link_to 'Edit', edit_group_path(group) %></button></td>
        <td><button class="infoButton2"><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="addButton2"><%= link_to 'New Group', new_group_path %></button>
